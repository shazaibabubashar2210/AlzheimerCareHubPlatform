@{
    Layout = "";
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Caregiver Request Form</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="~/css/caregiverdashboardstyling.css" rel="stylesheet" />
    <link href="~/css/caregiverdashboardcards.css" rel="stylesheet" />
    <style>
        body {
            background-color: #cfe6dc;
        }

        .form-container {
            max-width: 600px;
            background: #cfe6dc;
            padding: 30px;
            border-radius: 10px;
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
            margin: 40px auto;
        }

        .form-title {
            color: #007bff;
            font-weight: bold;
        }

        .form-label {
            font-weight: 600;
            color: #007bff;
        }

        .form-control {
            background-color: #e7f0ff;
            border: none;
            border-radius: 10px;
        }

        .btn-blue {
            background-color: #007bff;
            color: white;
            border-radius: 10px;
            padding: 10px;
            width: 100%;
        }

            .btn-blue:hover {
                background-color: transparent;
                border: 1px solid #007bff;
            }
    </style>
</head>
<body>

    <div class="container">
        <div class="form-container">
            <div style="display: flex; justify-content: space-between; align-items: center;">
                <div>
                    <h2 class="form-title" style="color: #004243;">Submit Your Request</h2>
                </div>
                <div>
                    <a href="/Auth/CaregiverDashBoard" style="color: #004243;">Go Back To Home Page</a>
                </div>
            </div>
            <form>
                <!-- Name -->
                <div class="mb-3">
                    <label class="form-label" style="color: #004243;">Name</label>
                    <input type="text" class="form-control" placeholder="Enter your name" required style="border: none; background: transparent; border: 1px solid grey;">
                </div>

                <!-- Email -->
                <div class="mb-3">
                    <label class="form-label" style="color: #004243;">Email</label>
                    <input type="email" class="form-control" placeholder="Enter your email" required style="border: none; background: transparent; border: 1px solid grey;">
                </div>

                <!-- Phone Number -->
                <div class="mb-3">
                    <label class="form-label" style="color: #004243;">Phone Number</label>
                    <input type="tel" class="form-control" placeholder="Enter your phone number" required style="border: none; background: transparent; border: 1px solid grey;">
                </div>

                <!-- Patient Age -->
                <div class="mb-3">
                    <label class="form-label" style="color: #004243;">Patient's Age</label>
                    <input type="number" class="form-control" placeholder="Enter patient's age" required style="border: none; background: transparent; border: 1px solid grey;">
                </div>

                <!-- Days Needed -->
                <div class="mb-3">
                    <label class="form-label" style="color: #004243;">How many days per week do you need assistance?</label>
                    <input type="number" class="form-control" placeholder="Enter number of days" required style="border: none; background: transparent; border: 1px solid grey;">
                </div>

                <!-- Type of Help -->
                <div class="mb-3">
                    <label class="form-label" style="color: #004243;">Type of help required</label>
                    <select class="form-control" required style="border: none; background: transparent; border: 1px solid grey;">
                        <option value="" disabled selected>Select an option</option>
                        <option>Physical Assistance</option>
                        <option>Memory Care</option>
                        <option>Companionship</option>
                        <option>Emergency Support</option>
                        <option>Other</option>
                    </select>
                </div>

                <!-- Emergency Availability -->
                <div class="mb-3">
                    <label class="form-label" style="color: #004243;">Do you need emergency support availability?</label><br>
                    <div class="form-check form-check-inline">
                        <input class="form-check-input" type="radio" name="emergency_required" value="yes" required style="border: none; background: transparent; border: 1px solid grey;">
                        <label class="form-check-label" style="color: #004243;">Yes</label>
                    </div>
                    <div class="form-check form-check-inline">
                        <input class="form-check-input" type="radio" name="emergency_required" value="no">
                        <label class="form-check-label" style="color: #004243;">No</label>
                    </div>
                </div>

                <!-- Notes -->
                <div class="mb-3">
                    <label class="form-label" style="color: #004243;">Additional Notes</label>
                    <textarea class="form-control" rows="3" placeholder="Describe anything specific..." style="border: none; background: transparent; border: 1px solid grey;"></textarea>
                </div>

                <!-- Submit Button -->
                <div class="text-center">
                    <button type="submit" class="helpbtn helpbtnprimary" style="width: 100%;">Submit Request</button>
                </div>
            </form>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
