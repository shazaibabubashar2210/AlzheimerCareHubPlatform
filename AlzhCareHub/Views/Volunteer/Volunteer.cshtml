@model AlzhCareHub.Models.VolunteerModel
@{
    Layout = "";
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Volunteer Signup Form</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="~/css/caregiverdashboardstyling.css" rel="stylesheet" />
    <link href="~/css/caregiverdashboardcards.css" rel="stylesheet" />
    <style>
        body {
            background-color: #cfe6dc;
        }

        .form-container {
            max-width: 600px;
            background: #cfe6dc;
            padding: 30px;
            border-radius: 10px;
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
            margin: 40px auto;
        }

        .form-title {
            color: #007bff;
            font-weight: bold;
        }

        .form-label {
            font-weight: 600;
            color: #007bff;
        }

        .form-control {
            background-color: #e7f0ff;
            border: none;
            border-radius: 10px;
        }

        .btn-blue {
            background-color: #007bff;
            color: white;
            border-radius: 10px;
            padding: 10px;
            width: 100%;
        }

            .btn-blue:hover {
                background-color: transparent;
                border: 1px solid #007bff;
            }
    </style>
</head>
<body>

    <div class="container">
        <div class="form-container">
            <div style="display: flex; justify-content: space-between; align-items: center;">
                <div>
                    <h2 class="form-title" style="color: #004243;">Fill the form below</h2>
                </div>
                <div>
                    <a href="/Auth/CaregiverDashBoard" style="color: #004243;">Go Back To Home Page</a>
                </div>
            </div>

            <form asp-action="Volunteer" asp-controller="Volunteer" method="post">
                <div class="mb-3">
                    <label class="form-label" style="color: #004243;">Name</label>
                    <input asp-for="Name" class="form-control" placeholder="Enter your name" required style="border: none; background: transparent; border: 1px solid grey;" />
                </div>

                <div class="mb-3">
                    <label class="form-label" style="color: #004243;">Email</label>
                    <input asp-for="Email" type="email" class="form-control" placeholder="Enter your email" required style="border: none; background: transparent; border: 1px solid grey;" />
                </div>

                <div class="mb-3">
                    <label class="form-label" style="color: #004243;">Phone Number</label>
                    <input asp-for="PhoneNumber" type="tel" class="form-control" placeholder="Enter your phone number" required style="border: none; background: transparent; border: 1px solid grey;" />
                </div>

                <div class="mb-3">
                    <label class="form-label" style="color: #004243;">How many days in a week are you available?</label>
                    <input asp-for="AvailableDays" type="number" class="form-control" placeholder="Enter number of days" required style="border: none; background: transparent; border: 1px solid grey;" />
                </div>

                <div class="mb-3">
                    <label class="form-label" style="color: #004243;">Do you have prior experience?</label><br />
                    <div class="form-check form-check-inline">
                        <input asp-for="HasExperience" class="form-check-input" type="radio" value="true" required />
                        <label class="form-check-label" style="color: #004243;">Yes</label>
                    </div>
                    <div class="form-check form-check-inline">
                        <input asp-for="HasExperience" class="form-check-input" type="radio" value="false" />
                        <label class="form-check-label" style="color: #004243;">No</label>
                    </div>
                </div>

                <div class="mb-3">
                    <label class="form-label" style="color: #004243;">Comfortable with physical assistance?</label><br />
                    <div class="form-check form-check-inline">
                        <input asp-for="CanAssistPhysically" class="form-check-input" type="radio" value="true" required />
                        <label class="form-check-label" style="color: #004243;">Yes</label>
                    </div>
                    <div class="form-check form-check-inline">
                        <input asp-for="CanAssistPhysically" class="form-check-input" type="radio" value="false" />
                        <label class="form-check-label" style="color: #004243;">No</label>
                    </div>
                </div>

                <div class="mb-3">
                    <label class="form-label" style="color: #004243;">Available for emergency calls?</label><br />
                    <div class="form-check form-check-inline">
                        <input asp-for="AvailableForEmergency" class="form-check-input" type="radio" value="true" required />
                        <label class="form-check-label" style="color: #004243;">Yes</label>
                    </div>
                    <div class="form-check form-check-inline">
                        <input asp-for="AvailableForEmergency" class="form-check-input" type="radio" value="false" />
                        <label class="form-check-label" style="color: #004243;">No</label>
                    </div>
                </div>

                <div class="text-center">
                    <button type="submit" class="helpbtn helpbtnprimary" style="width: 100%;">Submit</button>
                </div>
            </form>

        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
