@{
    Layout = "";
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Volunteer Signup Form</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    
    <title>Volunteer Registration</title>
    <style>
        body {
            background-color: #f8f9fa;
        }

        .form-container {
            max-width: 600px;
            background: white;
            padding: 30px;
            border-radius: 10px;
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
            margin: 40px auto;
        }

        .form-title {
            color: #007bff;
            font-weight: bold;
        }

        .form-label {
            font-weight: 600;
            color: #007bff;
        }

        .form-control {
            background-color: #e7f0ff;
            border: none;
            border-radius: 10px;
        }

        .btn-blue {
            background-color: #007bff;
            color: white;
            border-radius: 10px;
            padding: 10px;
            width: 100%;
        }

            .btn-blue:hover {
                background-color:transparent;
                border: 1px solid #007bff;
            }
    </style>
</head>
<body>

    <div class="container">
        <div class="form-container">
            <div style="display: flex; justify-content: space-between; align-items: center; align-content: center;">
                <div>
                    <h2 class="form-title">Fill the form below</h2>
                </div>
                <div>
                    <a href="/Auth/CaregiverDashBoard">Go Back To Home Page</a>
                </div>
            </div>
            <form>
                <!-- Name -->
                <div class="mb-3">
                    <label class="form-label">Name</label>
                    <input type="text" class="form-control" placeholder="Enter your name" required>
                </div>

                <!-- Email -->
                <div class="mb-3">
                    <label class="form-label">Email</label>
                    <input type="email" class="form-control" placeholder="Enter your email" required>
                </div>

                <!-- Phone Number -->
                <div class="mb-3">
                    <label class="form-label">Phone Number</label>
                    <input type="tel" class="form-control" placeholder="Enter your phone number" required>
                </div>

                <!-- Availability -->
                <div class="mb-3">
                    <label class="form-label">How many days in a week are you available to give service as a volunteer?</label>
                    <input type="number" class="form-control" placeholder="Enter number of days" required>
                </div>

                <div class="mb-3">
                    <label class="form-label">Do you have prior experience helping individuals with Alzheimer’s or related conditions?</label><br>
                    <div class="form-check form-check-inline">
                        <input class="form-check-input" type="radio" name="experience" value="yes" required>
                        <label class="form-check-label">Yes</label>
                    </div>
                    <div class="form-check form-check-inline">
                        <input class="form-check-input" type="radio" name="experience" value="no">
                        <label class="form-check-label">No</label>
                    </div>
                </div>

                <div class="mb-3">
                    <label class="form-label">Are you comfortable with physical assistance?</label><br>
                    <div class="form-check form-check-inline">
                        <input class="form-check-input" type="radio" name="physical_assistance" value="yes" required>
                        <label class="form-check-label">Yes</label>
                    </div>
                    <div class="form-check form-check-inline">
                        <input class="form-check-input" type="radio" name="physical_assistance" value="no">
                        <label class="form-check-label">No</label>
                    </div>
                </div>

                <div class="mb-3">
                    <label class="form-label">Are you available for emergency calls outside your schedule?</label><br>
                    <div class="form-check form-check-inline">
                        <input class="form-check-input" type="radio" name="emergency_calls" value="yes" required>
                        <label class="form-check-label">Yes</label>
                    </div>
                    <div class="form-check form-check-inline">
                        <input class="form-check-input" type="radio" name="emergency_calls" value="no">
                        <label class="form-check-label">No</label>
                    </div>
                </div>

                <!-- Submit Button -->
                <div class="text-center">
                    <button type="submit" class="btn btn-blue">Submit</button>
                </div>
            </form>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
