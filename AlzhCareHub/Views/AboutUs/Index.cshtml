@{
    Layout = "_AboutUs";
}
@{
    var userEmail = Context.Session.GetString("UserEmail");
}

@if (string.IsNullOrEmpty(userEmail))
{
    <script type="text/javascript">
        alert("Please log in to access this page.");
        window.location.href = "/Auth/Caregiverdashboard";  
    </script>
}
else
{
    <!-- Hero Section (only visible to authenticated users) -->
    <div class="container-fluid my-5">
        <div class="row hero">
            <div class="col-lg-5 ps-lg-5 ps-lg-0">
                <img src="~/images/24.webp" alt="Virtual Healthcare" class="img-fluid" style="margin-top: 4rem; margin-left: 2rem">
            </div>
            <div class="col-lg-5 ms-lg-5 ps-lg-5">
                <p style="font-size: 25px; color: #004241; margin-bottom: 2rem">@AlzhCareHub.StringResources.Resource.AboutUs_</p>
                <h1 class="display-5 fw-bold">@AlzhCareHub.StringResources.Resource.AboutUsHeroHead</h1>
                <p class="text-muted" style="margin-top: 2rem; line-height: 2rem;">@AlzhCareHub.StringResources.Resource.AboutUsHeroPara</p>
                <a asp-controller="Contact" asp-action="Index" class="helpbtnprimary help-btn" style="margin-top: 0">@AlzhCareHub.StringResources.Resource.GetHelp</a>
            </div>
        </div>
    </div>

    <!-- Watch Video (only visible to authenticated users) -->

    <div class="d-flex justify-content-center flex-column align-items-center">
        <div>
            <h4 class="mt-5 mb-3">@AlzhCareHub.StringResources.Resource.AboutUsVideoHead</h4>
        </div>
        <div class="mb-4 mt-5">
            <iframe width="660"
                    height="350"
                    src="https://www.youtube.com/embed/nw2B9VqcHqs?si=lFVLk4xoeXP3NYh_&start=18"
                    title="Alzheimer Disease"
                    frameborder="0"
                    allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture; web-share"
                    referrerpolicy="strict-origin-when-cross-origin"
                    allowfullscreen>
            </iframe>

        </div>
    </div>

    <!-- Latest Articles Section -->
    <div class="container my-5">
        <div class="text-center">
            <h2 class="fw-bold">@AlzhCareHub.StringResources.Resource.AHead</h2>
            <hr class="mx-auto" style="width: 50px; background-color: #000; height: 2px;">
        </div>

        <div class="row mt-4 d-flex">
            <!-- Article Card 1 -->

            <div class="col-md-4 d-flex" style="cursor: pointer">
                <div class="card shadow border-0 w-100">
                    <img src="~/images/article1.jpeg" class="card-img-top" alt="Alzheimer's Article">
                    <div class="card-body d-flex flex-column" style="background-color: #E4F1EB;">
                        <h5 class="card-title fw-bold">@AlzhCareHub.StringResources.Resource.arhead1</h5>
                        <p class="card-text">@AlzhCareHub.StringResources.Resource.a1para</p>
                        <a href="https://ur.wikipedia.org/wiki/%D8%A7%D9%84%D8%B2%D8%A7%D8%A6%D9%85%D8%B1" target="_blank" class="fw-bold mt-auto" style="color: #004241;">@AlzhCareHub.StringResources.Resource.a3btn</a>

                    </div>
                </div>

            </div>
            <!-- Article Card 2 -->
            <div class="col-md-4 d-flex" style="cursor: pointer;">
                <div class="card shadow border-0 w-100">
                    <img src="~/images/article2.jpeg" class="card-img-top" alt="Alzheimer's Article">
                    <div class="card-body d-flex flex-column" style="background-color: #E4F1EB;">
                        <h5 class="card-title fw-bold">@AlzhCareHub.StringResources.Resource.a2head</h5>
                        <p class="card-text">@AlzhCareHub.StringResources.Resource.a2para</p>
                        <a href="~/6 Things Never to Do When Caring an Alzheimer patient.pdf" download class="fw-bold mt-auto;" style="color: #004241;">@AlzhCareHub.StringResources.Resource.adownload</a>
                    </div>
                </div>
            </div>

            <!-- Article Card 3 -->
            <div class="col-md-4 d-flex" style="cursor: pointer;">
                <div class="card shadow border-0 w-100">
                    <img src="~/images/article3.jpeg" class="card-img-top" alt="Alzheimer's Article">
                    <div class="card-body d-flex flex-column" style="background-color: #E4F1EB;">
                        <h5 class="card-title fw-bold">@AlzhCareHub.StringResources.Resource.a3head</h5>
                        <p class="card-text">@AlzhCareHub.StringResources.Resource.a3para</p>
                        <a href="https://www.rcpsych.ac.uk/mental-health/translations/urdu/memory-problems-and-dementia" class="fw-bold mt-auto" target="_blank" style="color: #004241;">@AlzhCareHub.StringResources.Resource.a3btn</a>
                    </div>
                </div>
            </div>
        </div>
    </div>

}


