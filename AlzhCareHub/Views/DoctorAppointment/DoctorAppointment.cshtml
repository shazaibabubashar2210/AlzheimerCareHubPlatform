@{
    Layout = "";
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>AlzhCare Treatment</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <style>
        *{
            scroll-behavior: smooth;
        }
        .hero-section{
            margin-top: 50px;
        }
        .brand-logo {
            font-size: 22px;
            font-weight: bold;
            color: #007bff;
        }

        .navbar-nav .nav-link {
            font-weight: 500;
        }

        .image-section img {
            max-width: 100%;
            border-radius: 10px;
        }
        .btn{
            border-radius: 20px;
            padding: 8px 20px;
        }

        /* Team Member styling  */
        .team-section {
            padding: 50px 0;
            text-align: center;
            background-color: #f8f9fa;
        }

        .team-member {
            background: white;
            border-radius: 10px;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
            padding: 15px;
            transition: transform 0.3s ease-in-out;
        }

            .team-member:hover {
                transform: translateY(-10px);
            }

            .team-member img {
                width: 100%;
                border-radius: 10px;
            }

            .team-member h5 {
                margin-top: 15px;
                font-weight: bold;
            }

        .check-availability {
            color: #007bff;
            text-decoration: none;
            font-size: 14px;
            font-weight: 500;
        }

            .check-availability:hover {
                text-decoration: underline;
            }

        .carousel-indicators button {
            background-color: #007bff !important;
        }
       .team-section .container img{
           height: 275px;
           width: 100%;
        }
    </style>
</head>
<body>

    <!-- Navbar -->
    <nav class="navbar navbar-expand-lg navbar-light bg-white shadow-sm">
        <div class="container-fluid">
            <a class="navbar-brand brand-logo ms-5" asp-controller="Auth" asp-action="CaregiverDashBoard">AlzhCare</a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse justify-content-end" id="navbarNav">
                <ul class="navbar-nav">
                    <li class="nav-item"><a class="nav-link" asp-controller="AboutUs" asp-action="Index">About Us</a></li>
                    <li class="nav-item"><a class="nav-link me-4" href="#Team">Team</a></li>
                </ul>
            </div>
        </div>
    </nav>

    <!-- Hero Section -->
    <section class="hero-section mb-5">
        <div class="container">
            <div class="row align-items-center">
                <!-- Image: Appears first on small screens -->
                <div class="col-lg-6 col-md-12 text-center image-section mb-4 mb-lg-0">
                    <img src="~/images/Doc1.jpg" class="img-fluid" alt="Physiotherapy Treatment" style="height: 300px">
                </div>

                <!-- Text Content -->
                <div class="col-lg-6 col-md-12 text-center text-lg-start">
                    <h5 class="text-uppercase text-secondary">Highly Professional Treating Alzheimer Disease Doctors</h5>
                    <h1 class="fw-bold">Welcome to <span class="text-primary">AlzhCare</span> Treatment</h1>
                    <p class="text-muted">
                        Receive expert physiotherapy care from specialists trusted by professionals.
                        Our experienced doctors have treated patients from <strong>leading medical institutions</strong> and
                        <strong>renowned alzheimer disease rehabilitation centers</strong>. Book your appointment today for personalized treatment.
                    </p>

                </div>
            </div>
        </div>
    </section>
    <!-- Team Members Section -->
    <section class="team-section py-5 bg-light" >
        <div class="container">
            <h6 class="text-primary text-uppercase text-center" style="margin-top: 3rem;">Our Team</h6>
            <h2 class="fw-bold text-center" style="margin-bottom: 3rem;">Our Expert Team Members</h2>

            <div class="row mt-4">
                <div class="col-lg-3 col-md-6 mb-4" id="Team">
                    <div class="card shadow-sm">
                        <img src="~/images/Doc2.jpg" class="card-img-top" alt="Devon Lane">
                        <div class="card-body text-center">
                            <h5 class="card-title">Dr. Ayaan Rahmani</h5>
                            <a href="#">Check Availability</a>
                        </div>
                    </div>
                </div>
                <div class="col-lg-3 col-md-6 mb-4">
                    <div class="card shadow-sm">
                        <img src="~/images/Doc3.jpg" class="card-img-top" alt="Devon Lane">
                        <div class="card-body text-center">
                            <h5 class="card-title">Dr. Zayan Malik</h5>
                            <a href="#">Check Availability</a>
                        </div>
                    </div>
                </div>
                <div class="col-lg-3 col-md-6 mb-4">
                    <div class="card shadow-sm">
                        <img src="~/images/Doc5.jpg" class="card-img-top" alt="Ralph Edwards">
                        <div class="card-body text-center">
                            <h5 class="card-title">Dr. Fahad Rahman</h5>
                            <a href="#">Check Availability</a>
