@{
    Layout = "";
}
@using System.Globalization
@{
    var culture = CultureInfo.CurrentUICulture.TwoLetterISOLanguageName;
    var isRtl = culture == "ur"; // Urdu is RTL
    var direction = isRtl ? "rtl" : "ltr";
    var lang = culture;
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>AlzhCare Treatment</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Baloo+Bhaijaan+2:wght@400..800&family=Noto+Nastaliq+Urdu:wght@400..700&family=Roboto:ital,wght@0,100..900;1,100..900&display=swap" rel="stylesheet">
    
    <style>
        *{
            margin:0;
            padding: 0;
            box-sizing: border-box;
            scroll-behavior: smooth;
            font-family: "Noto Nastaliq Urdu", serif;

        }
        nav{
            background-color: #cfe6dc;
            color: #006B69;
        }
        body{
            background-color: #cfe6dc;
            color: #006B69;
        }

        .logo {
            width: 40px;
            height: 40px;
            border-radius: 50%;
            background-color: #006B69;
            color: #fff;
            font-size: 18px;
            font-weight: bold;
            display: flex;
            align-items: center;
            justify-content: center;
            text-align: center;
        }


        .hero-section{
            margin-top: 50px;
        }
        .brand-logo {
            font-size: 22px;
            font-weight: bold;
            color: #006B69;
        }

        .navbar-nav .nav-link {
            font-weight: 500;
        }

        .image-section img {
            max-width: 100%;
            border-radius: 10px;
        }
        .btn{
            border-radius: 20px;
            padding: 8px 20px;
        }

        /* Team Member styling  */
        .team-section {
            padding: 50px 0;
            text-align: center;
            background-color: #f8f9fa;
        }

        .team-member {
            background: white;
            border-radius: 10px;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
            padding: 15px;
            transition: transform 0.3s ease-in-out;
        }

            .team-member:hover {
                transform: translateY(-10px);
            }

            .team-member img {
                width: 100%;
                border-radius: 10px;
            }

            .team-member h5 {
                margin-top: 15px;
                font-weight: bold;
            }

            .check-availability:hover {
                text-decoration: underline;
            }

        .carousel-indicators button {
            background-color: #006B69;
            !important;
        }
       .team-section .container img{
           height: 275px;
           width: 100%;
        }
        .team-container{
            margin-top: 5rem;
        }
        /* Add some fade-in animation */
        .fade-in {
            opacity: 0;
            transform: translateY(30px); /* Move the element a little down */
            transition: opacity 1.5s ease-in-out, transform 1.5s ease-in-out;
        }

        /* This class will be added when the element is in view */
        .fade-in-visible {
            opacity: 1;
            transform: translateY(0); /* Move element back to its original position */
        }

        .firsthead[dir="rtl"]
        {
            text-align: right;
            margin-right: 2rem;
            margin-bottom: 1rem;
        }

        .docpara[dir="rtl"]{
            margin-right: 2rem;
        }
    </style>
</head>
<body>

    <!-- Navbar -->
    <nav class="navbar navbar-expand-lg shadow-sm">
        <div class="container-fluid">
            <span class="logo ms-5 me-3">A</span> <a class="navbar-brand brand-logo" asp-controller="Auth" asp-action="CaregiverDashBoard">
                @AlzhCareHub.StringResources.Resource.AlzhCare
            </a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse justify-content-end" id="navbarNav">
                <ul class="navbar-nav">
                    <li class="nav-item"><a class="nav-link" asp-controller="AboutUs" asp-action="Index" style="color: #006B69;">@AlzhCareHub.StringResources.Resource.AboutUs_</a></li>
                    <li class="nav-item"><a class="nav-link me-4" href="#Team" style="color: #006B69;">@AlzhCareHub.StringResources.Resource.Team</a></li>
                    <li class="nav-item" style="background-color: #cfe6dc;">
                        <form method="post" asp-controller="Language" asp-action="SetLanguage" class="d-flex me-3">
                            <select name="culture" onchange="this.form.submit()" class="form-select" style="background-color: #cfe6dc; border: 1px solid grey;">
                                <option value="en" selected="@((Context.Session.GetString("Culture") == "en") ? "selected" : null)" style="color: #004241;">English</option>
                                <option value="ur" selected="@((Context.Session.GetString("Culture") == "ur") ? "selected" : null)" style="color: #004241;">اردو</option>
                            </select>
                        </form>
                    </li>
                </ul>
            </div>
        </div>
    </nav>

    <!-- Hero Section -->
    <section class="hero-section mb-5" dir="@direction">
        <div class="container">
            <div class="row align-items-center">
                <!-- Image: Appears first on small screens -->
                <div class="col-lg-6 col-md-12 text-center image-section mb-4 mb-lg-0">
                    <img src="~/images/HeroDoctor.jpg" class="img-fluid" alt="Physiotherapy Treatment" style="height: 400px; margin-right: 2rem;">
                </div>

                <!-- Text Content -->
                <div class="col-lg-6 col-md-12 text-center text-lg-start">
                    <h5 class="text-uppercase mt-3 firsthead" dir="@direction">@AlzhCareHub.StringResources.Resource.DoctorHead</h5>
                    <h1 class="fw-bold" style="line-height: 4.5rem;">@AlzhCareHub.StringResources.Resource.DoctorSecondHead</h1>
                    <p class="docpara" style="line-height: 2.5rem; margin-top: 2rem; " dir="@direction">
                        @AlzhCareHub.StringResources.Resource.DoctorPara
                    </p>

                </div>
            </div>
        </div>
    </section>
    @model List<AlzhCareHub.Models.TeamMember>

    <div class="container mt-4 team-container">
        <div class="row">
            <div class="col-12">
                <div class="col-12">
                    <h2 class="text-center mb-4" id="Team" style="margin-top: 5rem;">
                        @AlzhCareHub.StringResources.Resource.OurTeam
                    </h2>
                </div>
                <div class="row g-4">
                    @if (Model == null || !Model.Any())
                    {
                        <p class="text-center text-danger">No team members found.</p>
                    }
                    else
                    {
                        @foreach (var member in Model)
                        {
                            <div class="col-lg-3 col-md-6 col-sm-12 fade-in" style="width: 25vw">
                                <div class="card shadow-sm h-100">
                                    <img src="@Url.Content("~/" + member.ImageUrl)" class="img-fluid" style="width: 100%; height: 280px; font-size: 18px;">
                                    <div class="card-body" style="background-color:#cfe6dc;">
                                        <p class="card-title">Name: @member.Name</p>
                                        <p>Location: @member.Location</p>
                                        <p>Phone: @member.PhoneNumber</p>
                                        <a href="#" class="d-block fw-bold text-center whatsapp-link" data-phone="@member.PhoneNumber" style="text-decoration: none; color: #006B69;">
                                            @AlzhCareHub.StringResources.Resource.ConnectionWatsapp
                                        </a>
                                    </div>
                                </div>
                            </div>
                        }
                    }
                </div>
            </div>
        </div>
    </div>

    <script>
               document.addEventListener("DOMContentLoaded", function () {
            const links = document.querySelectorAll(".whatsapp-link");
            links.forEach(link => {
                link.addEventListener("click", function (e) {
                    e.preventDefault();
                    const phone = this.getAttribute("data-phone");

                    if (phone) {
                        const cleanedPhone = phone.replace(/\D/g, '');
                        window.open(`https://wa.me/${cleanedPhone}`, "_blank");
                    } else {
                        alert("Phone number not found.");
                    }
                });
            });
        });

    </script>

    <script src="~/js/popupform.js"></script>
    <script>
        document.addEventListener("DOMContentLoaded", function () {
            const observer = new IntersectionObserver((entries, observer) => {
                entries.forEach(entry => {
                    if (entry.isIntersecting) {
                        entry.target.classList.add('fade-in-visible');
                        observer.unobserve(entry.target); // Stop observing once animation is triggered
                    }
                });
            }, {
                threshold: 0.1 // Trigger the animation when 10% of the element is visible
            });

            // Target elements you want to animate on scroll
            const fadeInElements = document.querySelectorAll('.fade-in');

            fadeInElements.forEach(element => {
                observer.observe(element); // Start observing the element
            });
        });
    </script>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>