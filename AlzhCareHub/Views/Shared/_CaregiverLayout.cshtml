    <!-- Chatbot Icon -->
    <div id="chatbot-icon" onclick="toggleChatbot()" style="
    position: fixed;
    bottom: 20px;
    right: 30px;
    background-color: #004242;
    border: 3px solid black;
    color: white;
    width: 60px;
    height: 60px;
