@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Login Page - AlzhCareHub</title>
    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="~/css/loginpagedesigning.css" rel="stylesheet" />
</head>
<body>
    <div class="container d-flex flex-column flex-lg-row align-items-center justify-content-center">
        <div class="image-container col-12 col-lg-6 d-flex justify-content-center">
            <img src="~/images/1.jpg" alt="Login Image" class="img-fluid" style="max-width: 450px; width: 100%;">
        </div>

        <div class="form-container col-12 col-lg-6 mt-5">
            <h2 class="text-center mb-4">@AlzhCareHub.StringResources.Resource.LoginHead</h2>
            <p class="text-center mb-4">@AlzhCareHub.StringResources.Resource.LoginPara</p>

            @if (TempData["Message"] != null)
            {
                <div class="alert alert-success text-center">
                    @TempData["Message"]
                </div>
            }

            @using (Html.BeginForm("Login", "Auth", FormMethod.Post))
            {
                <div class="mb-3">
                    <input type="email" name="email" class="form-control" placeholder="@AlzhCareHub.StringResources.Resource.Email" required>
                </div>
                <div class="mb-3">
                    <input type="password" name="password" class="form-control" placeholder="@AlzhCareHub.StringResources.Resource.Password" required>
                </div>
                <button type="submit" class="btn btn-primary w-100">@AlzhCareHub.StringResources.Resource.Login_</button>
            }

            <p class="mt-3 text-center">
                Don't have an account?
                <a asp-controller="Auth" asp-action="Register">@AlzhCareHub.StringResources.Resource.Create_account</a> |
                <a asp-controller="Auth" asp-action="ForgotPassword">@AlzhCareHub.StringResources.Resource.Reset_Password</a>
            </p>
        </div>
    </div>


    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.min.js"></script>
    <script src="https://www.gstatic.com/firebasejs/9.6.1/firebase-app.js"></script>
    <script src="https://www.gstatic.com/firebasejs/9.6.1/firebase-auth.js"></script>

</body>
</html>
