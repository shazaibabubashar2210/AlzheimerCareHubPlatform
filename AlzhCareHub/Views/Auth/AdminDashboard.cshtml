@{
    Layout = "_AdminLayout";
}
<!Doctype html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Admin Dashboard - AlzhCareHub</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
     <style>
         body{
            height: 100vh;
            width: 100vw;
            background-color: #cfe6dc;
         }
         .fullbodycontainer{
           margin-top: 5rem;
            display: flex;
            flex-direction: column;
            justify-content: center;
            align-items: center;
         }
     </style>

    <link href="~/css/caregiverdashboardstyling.css" rel="stylesheet">
    <link href="~/css/caregiverdashboardcards.css" rel="stylesheet">
</head>
<body>
    <div class="fullbodycontainer">
        <div>
            <h1>Welcome, Admin!</h1>
        </div>
        <div class="adminbuttons">
            <a class="help-btn helpbtn helpbtnprimary" asp-controller="AdminResponseFeedback" asp-action="Index">Manage FeedBack</a><br/>
            <a class="help-btn helpbtn helpbtnprimary" asp-controller="ManageDonation" asp-action="Index">Manage Donation</a><br/>
            <a class="help-btn helpbtn helpbtnprimary" asp-controller="ManageContacts" asp-action="ManageContact">Manage Contacts</a><br/>
            <a class="help-btn helpbtn helpbtnprimary" asp-controller="ManageDoctors" asp-action="ManageDoctor">Manage Doctors</a>

        </div>
    </div>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/microsoft-signalr/5.0.0/signalr.min.js"></script>
</body>
</html>


