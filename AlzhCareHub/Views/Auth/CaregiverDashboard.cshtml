@{
    Layout = "_CaregiverLayout";
}

<!-- Caregiver-specific content -->
<head>
    <link href="~/css/caregiverpagedesigning.css" rel="stylesheet" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/aos/2.3.4/aos.css" />
    <title>CareGiver DashBoard</title>
    <style>
        *{
        scroll-behavior: smooth;
        }
        /*Cards Hover Effect*/
        .card {
        transition: transform 0.3s ease, box-shadow 0.3s ease, background-color 0.3s ease;
        cursor: pointer;
        }

        .card:hover {
        transform: translateY(-10px); 
        box-shadow: 0 10px 20px rgba(0, 0, 0, 0.2);         
        background-color: #f8f9fa; 
        }

        .card .card-body {
        transition: transform 0.3s ease;
        }

        .card:hover .card-body {
        transform: translateY(-5px); /* Slight shift in the body of the card */
        }

        .card .iconimg {
        transition: transform 0.3s ease;
        }

        .card:hover .iconimg {
        transform: scale(1.1); /* Slightly increase the size of the icon image */
        }

        .hero-img {
        width: 100%;
        height: auto; 
        max-width: 100%; 
        max-height: 320px;
        border-radius: 20px;

        }

        .hero{
        margin-top: 8rem;
        }
    </style>
</head>

@{
    var userEmail = Context.Session.GetString("UserEmail");
}
<!-- Hero Section -->
<div class="container my-5">
    <div class="row align-items-center hero">
        <!-- Image Column -->
        <div class="col-lg-6 order-1 order-lg-2 imgbox" data-aos="fade-left" data-aos-delay="300">
            <img src="~/images/HeroSectionImage.png" alt="Virtual Healthcare" class="img-fluid hero-img">
        </div>

        <!-- Text Column -->
        <div class="col-lg-6 order-2 order-lg-1 mb-4 mb-lg-0" data-aos="fade-right" data-aos-delay="300">
            <h1 class="display-5 fw-bold">@AlzhCareHub.StringResources.Resource.HeroText</h1>
            <p class="text-muted">@AlzhCareHub.StringResources.Resource.HeroPara</p>

            @if (userEmail == null)
            {
                <!-- Show alert when user is not logged in -->
                <a href="javascript:void(0);" class="btn btn-primary btn-lg helpbtn" onclick="showLoginAlert()">
                    @AlzhCareHub.StringResources.Resource.GetHelp
                </a>
            }
            else
            {
                <!-- Allow navigation when user is logged in -->
                <a asp-action="Index" asp-controller="Contact" class="btn btn-primary btn-lg helpbtn">
                    @AlzhCareHub.StringResources.Resource.GetHelp
                </a>
            }
        </div>
    </div>
</div>

<!-- Our Services Section -->
<div class="container my-5">
    <div class="text-center mb-4" data-aos="fade-down">
        <h2 class="fw-bold">@AlzhCareHub.StringResources.Resource.Services</h2>
        <div class="rowborder"></div>
