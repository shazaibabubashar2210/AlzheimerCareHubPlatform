    <div class="support-content" data-aos="zoom-in" data-aos-delay="400">
        <h2>@AlzhCareHub.StringResources.Resource.DonateHead</h2>
        <p>@AlzhCareHub.StringResources.Resource.DonatePara </p>
        @if(userEmail==null)
        {
            <a href="javascript:void(0);" onclick="showLoginAlert();" class="btn btn-outline-primary helpbtn">@AlzhCareHub.StringResources.Resource.Donate</a>
        }
        else{
            <a asp-controller="Donation" asp-action="Donate" class="btn btn-outline-primary helpbtn">@AlzhCareHub.StringResources.Resource.Donate</a>
        }

    </div>
    <div data-aos="zoom-in" data-aos-delay="400">
        <img src="~/images/Donate.png" alt="Supporting Alzheimer's Patients" >
    </div>
</div>

