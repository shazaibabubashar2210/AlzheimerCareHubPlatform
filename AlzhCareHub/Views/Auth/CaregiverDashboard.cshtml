        <p>@AlzhCareHub.StringResources.Resource.JoinPara</p>
        @if(userEmail==null)
        {
            <a href="javascript:void(0);" onclick="showLoginAlert();" class="btn btn-outline-primary helpbtn">@AlzhCareHub.StringResources.Resource.LM</a>
        }
        else{
            <a asp-controller="AboutUs" asp-action="Index" class="btn btn-outline-primary helpbtn">@AlzhCareHub.StringResources.Resource.LM</a>
        }
