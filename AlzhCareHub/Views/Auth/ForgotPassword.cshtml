@{
    Layout = null;
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Forgot Password - AlzhCareHub</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <style>
            
        .submit{
            display: block;
            margin:auto;
        }
    </style>
</head>
<body>
    <div class="container">
        <h2 class="text-center mt-5">Reset Password</h2>
        <p class="text-center mb-4">Enter your email address to receive a password reset link.</p>

        @if (TempData["Error"] != null)
        {
            <div class="alert alert-danger text-center">
                @TempData["Error"]
            </div>
        }

        @if (TempData["Success"] != null)
        {
            <div class="alert alert-success text-center">
                @TempData["Success"]
            </div>
        }

        @using (Html.BeginForm("ForgotPassword", "Auth", FormMethod.Post))
        {
            <div class="mb-3">
                <input type="email" name="email" class="form-control" placeholder="Enter your email" required />
            </div>
            <button type="submit" class="btn btn-primary text-center submit">Send Password Reset Link</button>
        }

        <p class="text-center mt-3">
            Remember your password? <a asp-controller="Auth" asp-action="Login">Login here</a>
        </p>

      
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.min.js"></script>
</body>
</html>
