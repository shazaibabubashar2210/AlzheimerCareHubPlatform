@{
    Layout = null;
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Register Page - AlzhCareHub</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="~/css/registerationpagedesigning.css" rel="stylesheet" />

    <script src="https://accounts.google.com/gsi/client" async defer></script>
</head>
<body>
    <div class="container d-flex flex-column flex-lg-row align-items-center justify-content-center">
        <div class="image-container col-12 col-lg-6 d-flex justify-content-center">
            <img src="~/images/1.jpg" alt="Register Image" class="img-fluid" style="max-width: 450px; width: 100%;">
        </div>

        <div class="form-container col-12 col-lg-6">
            <h2 class="text-center">@AlzhCareHub.StringResources.Resource.CreateAccount</h2>
            <p class="text-center mb-4">@AlzhCareHub.StringResources.Resource.RegisterText</p>

            @if (TempData["Error"] != null)
            {
                <div class="alert alert-danger text-center">
                    @TempData["Error"]
                </div>
            }

            @if (TempData["Success"] != null)
            {
                <div class="alert alert-success text-center">
                    @TempData["Success"]
                </div>
            }

            @using (Html.BeginForm("Register", "Auth", FormMethod.Post, new { id = "registerForm" })) // ✅ Added ID for JavaScript
            {
                <div class="mb-3">
                    <input type="email" id="email" name="email" class="form-control" placeholder="@AlzhCareHub.StringResources.Resource.Email" required />
                </div>
                <div class="mb-3">
                    <input type="password" id="password" name="password" class="form-control" placeholder="@AlzhCareHub.StringResources.Resource.Password" required />
                </div>
                <button type="submit" class="btn btn-primary w-100">@AlzhCareHub.StringResources.Resource.Register</button>
            }
            <p class="text-center mt-3">
                @AlzhCareHub.StringResources.Resource.AlreadyAccount
                <a asp-controller="Auth" asp-action="Login">@AlzhCareHub.StringResources.Resource.LoginHere</a>
            </p>
        </div>
    </div>

    <script src="https://www.gstatic.com/firebasejs/8.10.1/firebase-app.js"></script>
    <script src="https://www.gstatic.com/firebasejs/8.10.1/firebase-auth.js"></script>
    <script src="~/js/registration.js"></script>
    <script>
        // ✅ Firebase Configuration
        const firebaseConfig = {
            apiKey: "AIzaSyCWeoUTihsySNUteX_FWBu9mDMXJY57yUs",
            authDomain: "alzheimercarehubsystem-a42e6.firebaseapp.com",
            projectId: "alzheimercarehubsystem-a42e6",
        };

        firebase.initializeApp(firebaseConfig);
        const auth = firebase.auth();
    </script>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.min.js"></script>
</body>
</html>