@model TeamMember
@{
    Layout = "_AdminLayout";
}
<!DOCTYPE html>
<html lang="en">
<head>
    <title>@(Model?.Id == null ? "Add New Doctor" : "Edit Doctor")</title>
    <link href="~/css/caregiverdashboardstyling.css" rel="stylesheet" />
    <style>
        body {
            background-color: #cfe6dc;
        }

        input[type="text"], .custom-input {
            border: none;
            outline: none;
            background: transparent;
            border: 1px solid #ccc;
            background-color: #cfe6dc;
        }

        select {
            background-color: transparent !important;
            border: 1px solid #ccc;
            padding: 8px 12px;
            font-size: 16px;
            color: #333;
        }

            select:focus {
                border-color: #007bff;
                outline: none;
            }
    </style>
</head>
<body>
    <div class="container mt-4">
        <h2>@(Model?.Id == null ? "Add New Doctor" : "Edit Doctor")</h2>
        <form method="post" asp-action="@(Model?.Id == null ? "AddDoctor" : "EditDoctor")" asp-route-id="@Model?.Id" enctype="multipart/form-data">
            <input type="hidden" asp-for="Id" />

            <div class="mb-3">
                <label for="name" class="form-label">Doctor Name</label>
                <input type="text" class="form-control custom-input" id="name" name="Name" value="@Model?.Name" required>
            </div>

            <div class="mb-3">
                <label for="PhoneNumber" class="form-label">Phone Number</label>
                <div class="input-group">
                    <select class="form-select" id="CountryCode" name="CountryCode" required style="width: 60px;">
                        <option value="+92" selected>+92 (Pakistan)</option>
                        <option value="+1">+1 (USA)</option>
                        <option value="+44">+44 (UK)</option>
                        <option value="+91">+91 (India)</option>
                        <option value="+61">+61 (Australia)</option>
                        <option value="+49">+49 (Germany)</option>
                    </select>
                    <input type="text" class="form-control custom-input" id="PhoneNumber" name="PhoneNumber" value="@Model?.PhoneNumber" pattern="\d{10}" required placeholder="Enter 10 digits">
                </div>
            </div>

            <div class="mb-3">
                <label for="Location" class="form-label">Location</label>
                <input type="text" class="form-control custom-input" id="Location" name="Location" value="@Model?.Location" required>
            </div>

            <div class="mb-3">
                <label class="form-label">Available Slot</label>
                <input type="text" name="AvailableSlot" class="form-control custom-input mb-2" value="@Model?.AvailableSlot" placeholder="e.g., Monday 9am-11am" required />
            </div>

            <div class="mb-3 form-group">
                <label asp-for="ImageFile">Upload Profile Picture</label>
                <input asp-for="ImageFile" type="file" class="form-control-file" />
            </div>

            <button type="submit" class="helpbtnprimary">@(Model?.Id == null ? "Add Doctor" : "Update Doctor")</button>
        </form>
    </div>
</body>
</html>
