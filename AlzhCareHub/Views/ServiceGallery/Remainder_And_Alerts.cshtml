@{
    Layout = "";
}
@model AlzhCareHub.Models.TaskModel;

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Add New Task</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <style>
        .container {
            max-width: 800px;
            margin: 50px auto;
            background: white;
            padding: 30px;
            border-radius: 10px;
            box-shadow: 0px 0px 10px rgba(0, 0, 0, 0.1);
        }

        .form-label {
            font-weight: bold;
        }

        .priority-options label {
            margin-right: 15px;
        }
    </style>
</head>
<body>

    <div class="container">
        <div class="d-flex justify-content-between align-items-center mb-3">
            <h2 class="text-primary">Add New Task</h2>
            <a class="text-primary" asp-controller="Auth" asp-action="Caregiverdashboard">Go Back</a>
        </div>

        <form asp-action="SaveTask" method="post" onsubmit="return validateForm()">
            <div class="mb-3">
                <label asp-for="Title" class="form-label">Title</label>
                <input asp-for="Title" class="form-control" id="title" required />
            </div>

            <div class="mb-3">
                <label asp-for="Email" class="form-label">Email</label>
                <input asp-for="Email" class="form-control" type="email" id="email" required />
            </div>

            <div class="mb-3">
                <label asp-for="Date" class="form-label">Date</label>
                <input asp-for="Date" class="form-control" type="date" id="date" required />
            </div>

            <div class="mb-3">
                <label asp-for="Time" class="form-label">Time</label>
                <input asp-for="Time" class="form-control" type="time" id="time" required />
            </div>

            <div class="mb-3">
                <label class="form-label">Priority</label>
                <div class="priority-options">
                    <input type="radio" id="extreme" name="Priority" value="Extreme" required> <label for="extreme" class="text-danger">Extreme</label>
                    <input type="radio" id="moderate" name="Priority" value="Moderate" required> <label for="moderate" class="text-warning">Moderate</label>
                    <input type="radio" id="low" name="Priority" value="Low" required> <label for="low" class="text-success">Low</label>
                </div>
            </div>

            <div class="mb-3">
                <label asp-for="Description" class="form-label">Task Description</label>
                <textarea asp-for="Description" class="form-control" rows="3" id="description" required></textarea>
            </div>

            <div>
                <button type="submit" class="btn btn-primary px-5 py-2">SET</button>
            </div>
        </form>
    </div>
    <script src="~/js/validation.js"></script>
</body>
</html>
