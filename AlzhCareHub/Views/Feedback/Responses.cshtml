@{
    Layout = "_Donation"; 
}
@model List<AlzhCareHub.Models.FeedbackModel>

<h2 class="text-primary mb-4">User Feedback & Admin Responses</h2>

@if (!Model.Any())
{
    <div class="alert alert-info">No feedback has been submitted yet.</div>
}
else
{
    <table class="table table-bordered shadow-lg">
        <thead class="table-primary">
            <tr>
                <th>Email</th>
                <th>Message</th>
                <th>Admin Response</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var feedback in Model)
            {
                <tr>
                    <td>@feedback.UserEmail</td>
                    <td>@feedback.Message</td>
                    <td>
                        @if (!string.IsNullOrEmpty(feedback.Response))
                        {
                            <p class="text-success fw-bold">@feedback.Response</p> <!-- Shows Admin Response -->
                        }
                        else
                        {
                            <p class="text-muted">Awaiting response</p>
                        }
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
