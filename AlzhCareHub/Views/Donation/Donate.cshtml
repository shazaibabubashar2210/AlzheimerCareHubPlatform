@{
    Layout = "_Donation";
}
<!DOCTYPE html>
<html>
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Donation Page</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <style>
        body {
            background-color: #f8f9fa;
        }

        .donation-container {
            max-width: 600px;
            background: white;
            padding: 20px;
            border-radius: 10px;
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
            margin: 40px auto;
        }

        .form-label {
            font-weight: 600;
        }

        .btn-green {
            background-color: #458ff6;
            color: white;
        }

            .btn-green:hover {
                background: transparent;
                color: #458ff6;
                border: 1px solid #458ff6;
            }

        .logo {
            border-radius: 50%;
            padding: 2px 10px;
            border: 2px solid #458ff6;
            color: #fff;
            background-color: #458ff6;
            margin-right: 3px;
        }
    </style>
</head>
    <body>
    @{
        var userEmail = Context.Session.GetString("UserEmail");
    }

    @if (string.IsNullOrEmpty(userEmail))
    {
        <script type="text/javascript">
            alert("Please log in to access this page.");
            window.location.href = "/Auth/Caregiverdashboard";
        </script>
    }
    else
    {
        <div class="donation-container">
            <h5 class="mb-3"><span class="logo">A</span><strong>AlzhCare</strong></h5>
            <p>Welcome to heavenchild donation, please fill out the form below.<br>Hopefully, it is blessed. <span class="text-danger">*</span></p>

            <form>
                <!-- Donation Type -->
                <div class="mb-3">
                    <label for="donationType" class="form-label">Choose a donation type</label>
                    <select class="form-select" id="donationType" required>
                        <option selected>Cost of education</option>
                        <option>Alzheimer Pateint Care</option>
                        <option>Support Our Website</option>
                    </select>
                </div>

                <!-- Donation Amount -->
                <div class="mb-3">
                    <label for="donationAmount" class="form-label">Choose a donation amount <span class="text-danger">*</span></label>
                    <input type="number" class="form-control" id="donationAmount" placeholder="Enter amount" required>
                </div>

                <!-- Donation Frequency -->
                <div class="mb-3">
                    <label class="form-label">Choose a donation frequency</label>
                    <div class="d-flex align-items-center">
                        <div class="form-check me-3">
                            <input class="form-check-input" type="radio" name="donationFrequency" id="monthly" checked>
                            <label class="form-check-label" for="monthly">Monthly</label>
                        </div>
                        <div class="form-check">
                            <input class="form-check-input" type="radio" name="donationFrequency" id="oneTime">
                            <label class="form-check-label" for="oneTime">One time</label>
                        </div>
                    </div>
                </div>

                <!-- Buttons -->
                <div class="d-flex justify-content-between">
                    <button type="button" class="btn btn-outline-primary" style="width:48%;">Cancel</button>
                    <button type="submit" class="btn btn-green" style="width:48%;">Go to checkout</button>
                </div>
            </form>
        </div>
    }
    </body>
</html>
